<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay_app2_dlg"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/large_margin"
        android:paddingBottom="@dimen/large_margin"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin"
        android:layout_margin="@dimen/large_margin"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/borde_round_dialog">

        <TextView
            android:id="@+id/app2_title_dlg"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/big_font"
            android:textColor="@color/black"
            android:text="@string/lorem"/>

        <TextView
            android:id="@+id/app2_msg_dlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/big_font"
            android:textColor="@color/black"
            android:text="@string/ipsum"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/huge_margin" />


        <Button
            android:id="@+id/app_dlg_btn2_exit"
            android:layout_width="@dimen/size_xxxxx"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_dialog"
            android:minHeight="0dp"
            android:padding="@dimen/large_padding"
            android:textSize="@dimen/big_font"
            android:textColor="@color/white"
            android:text="@string/text_no"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_padding" />

        <Button
            android:id="@+id/app_dlg_btn2_done"
            android:layout_width="@dimen/size_xxxxx"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_dialog"
            android:minHeight="0dp"
            android:padding="@dimen/large_padding"
            android:textSize="@dimen/big_font"
            android:textColor="@color/white"
            android:text="@string/text_yes"/>


    </LinearLayout>



</LinearLayout>



