<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay_app_dlg"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="vertical"
        android:paddingTop="@dimen/huge_margin"
        android:paddingBottom="@dimen/huge_margin"
        android:paddingLeft="@dimen/big_margin"
        android:paddingRight="@dimen/big_margin"
        android:layout_margin="@dimen/normal_margin"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/borde_round_dialog">

        <TextView
            android:id="@+id/app_title_dlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/big_font"
            android:textColor="@color/black"
            android:visibility="visible"
            android:text="@string/lorem"/>


        <TextView
            android:id="@+id/app_msg_dlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/big_font"
            android:textColor="@color/black"
            android:text="@string/ipsum"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_margin" />

        <Button
            android:id="@+id/app_dlg_btn_exit"
            android:layout_width="@dimen/size_x"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_border_dialog"
            android:minHeight="0dp"
            android:padding="@dimen/large_padding"
            android:textSize="@dimen/big_font"
            android:textColor="@color/white"
            android:text="@string/text_accept"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>


</LinearLayout>

