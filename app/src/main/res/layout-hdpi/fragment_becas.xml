<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.equipu.profeplus.fragments.board.BecasFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_fondo"
        android:orientation="vertical">

        <include layout="@layout/header_template4"/>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/title_height"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin">


            <TextView
                android:id="@+id/txt_title"
                style="@style/style_text_x"
                android:text="@string/text_becas_and_certificates"/>

            <TextView
                android:id="@+id/txt_content"
                style="@style/style_text_xx"
                android:text="@string/text_content_becas_certificates" />

            <TextView
                android:id="@+id/txt_foot"
               style="@style/style_text_xx"
                android:text="@string/text_web_app_prizes" />





        </LinearLayout>

    </RelativeLayout>

</FrameLayout>

