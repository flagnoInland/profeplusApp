<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollview_border_small"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_run_descrption"
        style="@style/style_text_xx"
        android:text="@string/text_first_step" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart_results_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/legend_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_font"
        android:textColor="@color/violeta2"
        android:layout_margin="@dimen/big_margin"/>


</LinearLayout>