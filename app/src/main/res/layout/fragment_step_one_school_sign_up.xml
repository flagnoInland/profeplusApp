<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/app_fondo"
             tools:context="com.equipu.profeplus.fragments.user.StepOneSchoolSignUpFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_next"
            style="@style/lower_app_button"
            android:contentDescription="nextsignin1"
            android:text="@string/text_next"/>

        <ScrollView
            android:layout_above="@+id/btn_next"
            style="@style/scrollview_border">

            <LinearLayout
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txt_run_view"
                    style="@style/style_text_x"
                    android:text="@string/text_register_step_one"/>

                <TextView
                    android:id="@+id/text_name"
                    style="@style/style_text_xx"
                    android:text="@string/text_write_name"/>

                <EditText
                    android:id="@+id/sign_up_name"
                    style="@style/default_app_input"
                    android:inputType="textCapWords" />

                <TextView
                    android:id="@+id/text_surname"
                    style="@style/style_text_xx"
                    android:text="@string/text_write_lastname"/>
                <EditText
                    android:id="@+id/sign_up_surname"
                    style="@style/default_app_input"
                    android:inputType="textCapWords" />

                <TextView
                    android:id="@+id/text_gender"
                    style="@style/style_text_xx"
                    android:layout_gravity="center_vertical"
                    android:text="@string/text_gender"/>

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_gravity="center_vertical"
                    style="@style/defaul_app_spinner" />


                <TextView
                    android:id="@+id/text_pass"
                    style="@style/style_text_xx"
                    android:text="@string/text_write_password"/>

                <EditText
                    android:id="@+id/sign_up_pass"
                    style="@style/default_app_input" />

                <TextView
                    android:id="@+id/text_pass_again"
                    style="@style/style_text_xx"
                    android:text="@string/text_write_password_again"/>

                <EditText
                    android:id="@+id/sign_up_pass_again"
                    style="@style/default_app_input" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </ScrollView>




    </RelativeLayout>


</FrameLayout>
