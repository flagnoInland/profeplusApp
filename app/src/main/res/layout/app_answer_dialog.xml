<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay_app2_dlg"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical"
        android:padding="@dimen/huge_margin"
        android:layout_margin="@dimen/normal_margin"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/borde_round_dialog">


        <TextView
            android:id="@+id/answer_msg_dlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/big_font"
            android:textColor="@color/black"
            android:text="@string/ipsum"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_space" />

        <Button
            android:id="@+id/app_answer_done"
            android:layout_width="@dimen/size_xxx"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_dialog"
            android:minHeight="0dp"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:padding="@dimen/large_padding"
            android:textSize="@dimen/big_font"
            android:textColor="@color/white"
            android:text="@string/text_yes"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_space" />

        <Button
            android:id="@+id/app_answer_exit"
            android:layout_width="@dimen/size_xxx"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_dialog"
            android:minHeight="0dp"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:padding="@dimen/large_padding"
            android:textSize="@dimen/big_font"
            android:textColor="@color/white"
            android:text="@string/text_no"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>


</LinearLayout>



