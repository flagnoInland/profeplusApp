<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginBottom="@dimen/small_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/txt_evaluation"
        android:layout_width="0dp"
        android:layout_height="@dimen/huge_font"
        android:layout_weight="25"
        android:text="@string/lorem"
        android:gravity="center"
        android:textSize="@dimen/normal_font"
        android:textColor="@color/white"
        android:padding="@dimen/small_padding"
        android:background="@drawable/button_round_green"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/btn_delete_evaluation"
        android:layout_width="0dp"
        android:layout_height="@dimen/huge_font"
        android:layout_weight="15"
        android:text="@string/text_terminate"
        android:gravity="center"
        android:textSize="@dimen/small_font"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:padding="@dimen/tiny_padding"
        android:background="@drawable/button_round_yellow"/>


    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"/>

</LinearLayout>