<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/verde</item>
        <item name="colorAccent">@color/verde</item>
        <item name="android:textColorHint">@color/verde</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="ic_back1">@drawable/ic_back1</item>
        <item name="ic_close1">@drawable/ic_close1</item>
        <item name="ic_user_mode">@drawable/ic_user_mode</item>
        <item name="ic_back">@drawable/ic_back</item>
        <item name="ic_edit_profile">@drawable/ic_edit_profile</item>
        <item name="ic_becas">@drawable/ic_becas</item>
        <item name="ic_close">@drawable/ic_close</item>
        <item name="ic_refresh1">@drawable/ic_refresh1</item>
        <item name="ic_share">@drawable/ic_share</item>
        <item name="ic_iphone">@drawable/ic_iphone</item>
        <item name="ic_delete">@drawable/ic_delete</item>
        <item name="icono_e">@drawable/icono_e</item>
        <item name="icono_t">@drawable/icono_t</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/new_transicion2</item>
    </style>

    <style name="scrollview_border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/borde_contenido</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:paddingLeft">@dimen/huge_margin</item>
        <item name="android:paddingRight">@dimen/huge_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:paddingTop">@dimen/normal_margin</item>
    </style>

    <style name="scrollview_border_answer" parent="scrollview_border">
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
        <item name="android:paddingTop">@dimen/normal_margin</item>
        <item name="android:layout_marginLeft">@dimen/normal_padding</item>
        <item name="android:layout_marginRight">@dimen/normal_padding</item>
    </style>

    <style name="style_text_x">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/tiny_padding</item>
        <item name="android:layout_marginBottom">@dimen/tiny_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_text_xx" parent="style_text_x">
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="style_text_xxx" parent="style_text_x">
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="default_app_boton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/button_round_green</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/normal_padding</item>
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="default_app_boton_orange" parent="default_app_boton">
        <item name="android:background">@drawable/button_round_yellow</item>
    </style>

    <style name="lower_app_button" parent="default_app_boton">
        <item name="android:paddingLeft">@dimen/big_padding</item>
        <item name="android:paddingRight">@dimen/big_padding</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
        <item name="android:paddingTop">@dimen/big_padding</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
    </style>

    <style name="results_app_button" parent="default_app_boton">
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
    </style>

    <style name="refresh_chart_button" parent="default_app_boton">
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:background">@drawable/button_round_orange</item>
    </style>

    <style name="results_button_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/twhite1</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
    </style>

    <style name="results_button_boxx" parent="results_button_box">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="defaul_app_spinner">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/spinner_app</item>
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:paddingRight">@dimen/normal_margin</item>
        <item name="android:paddingTop">@dimen/normal_margin</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
    </style>

    <style name="default_app_input">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/verde</item>
        <item name="android:padding">@dimen/normal_margin</item>
        <item name="android:background">@drawable/borde_formulario_entrada</item>
    </style>

    <style name="spinner_app_eval" parent="defaul_app_spinner">
        <item name="android:layout_width">@dimen/size_yy</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:background">@drawable/spinner_app_eval</item>
    </style>

    <style name="edit_app_eval" parent="default_app_input">
        <item name="android:layout_width">@dimen/size_yy</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/big_font</item>
    </style>

    <style name="text_app_eval" parent="default_app_input">
        <item name="android:layout_width">@dimen/size_yy</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/twhite1</item>
        <item name="android:textSize">@dimen/big_font</item>
    </style>

    <style name="default_app_input_x" parent="default_app_input">
        <item name="android:singleLine">false</item>
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:lines">3</item>
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textColor">@color/gris</item>
    </style>

    <style name="default_app_input_xx" parent="default_app_input">
        <item name="android:background">@color/twhite1</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="default_app_checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:button">@drawable/btn_check</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
    </style>

    <style name="default_app_toggle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_yy</item>
        <item name="android:background">@drawable/button_toggle_lesson_type</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:layout_marginLeft">@dimen/normal_padding</item>
        <item name="android:layout_marginRight">@dimen/normal_padding</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/big_padding</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
    </style>



    <style name="percentage_value">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>



    <style name="app_respuesta">
        <item name="android:background">@color/twhite1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/extra_large_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="app_respuesta_tf" parent="app_respuesta">
        <item name="android:textColor">@color/twhite1</item>
    </style>

    <style name="date_dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_date</item>
    </style>



</resources>
