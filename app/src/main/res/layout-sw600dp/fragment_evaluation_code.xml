<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_fondo"
    tools:context="com.equipu.profeplus.fragments.teacher_job.EvaluationCodeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/header_template4"></include>

        <ScrollView
            android:layout_above="@+id/btn_next"
            style="@style/scrollview_border_land">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txt_header_evaluation"
                    style="@style/style_text_x"
                    android:text="@string/text_can_start"/>


                <TextView
                    android:id="@+id/edt_rand_code_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/null_value_txt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="@dimen/big_padding"
                    android:textSize="@dimen/extra_huge_font"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txt_connected"
                    style="@style/style_text_x"
                    android:text="@string/msg_number_connected_now"/>

                <TextView
                    android:id="@+id/edt_connected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symbol_0"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="@dimen/normal_padding"
                    android:textSize="@dimen/huge_font"
                    android:layout_gravity="center" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_padding" />

                <Button
                    android:id="@+id/btn_refresh_result"
                    android:text="@string/text_refresh"
                    style="@style/default_app_boton_land_orange"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_padding" />


                <Button
                    android:id="@+id/btn_accept"
                    style="@style/default_app_boton_land"
                    android:text="@string/text_accept"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_padding" />

                <Button
                    android:id="@+id/btn_edit"
                   style="@style/default_app_boton_land"
                    android:text="@string/text_edit"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>


</FrameLayout>
