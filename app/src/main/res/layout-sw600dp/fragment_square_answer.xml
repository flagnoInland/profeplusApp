<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_fondo"
    tools:context=".fragments.student_job.AnswerSquareFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_fondo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ViewStub
                android:id="@+id/header_tmpl"
                android:layout="@layout/header_template5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ScrollView
                        android:layout_above="@+id/botones"
                        style="@style/scrollview_border_land">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/big_margin"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_run_view"
                                style="@style/style_text_xx"
                                android:text="@string/msg_tap_correct_answer"/>

                            <TextView
                                android:id="@+id/txt_roulette_action"
                                style="@style/style_text_x"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/msg_tap_correct_answer"/>


                            <Button
                                android:id="@+id/chkb_a"
                                style="@style/default_app_toggle_land"
                                android:text="@string/lbl_opinion_a" />


                            <Button
                                android:id="@+id/chkb_b"
                                style="@style/default_app_toggle_land"
                                android:text="@string/lbl_opinion_b" />


                            <Button
                                android:id="@+id/chkb_c"
                                style="@style/default_app_toggle_land"
                                android:text="@string/lbl_opinion_c" />


                            <Button
                                android:id="@+id/chkb_d"
                                style="@style/default_app_toggle_land"
                                android:text="@string/lbl_opinion_d" />

                            <Button
                                android:id="@+id/chkb_e"
                                style="@style/default_app_toggle_land"
                                android:text="@string/lbl_opinion_e" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/big_padding"/>

                            <Button
                                android:id="@+id/btn_guest_session"
                                android:layout_width="@dimen/size_xxxx"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:minHeight="0dp"
                                android:textSize="@dimen/normal_font"
                                android:textColor="@color/white"
                                android:background="@drawable/button_round_gold"
                                android:paddingLeft="@dimen/normal_margin"
                                android:paddingRight="@dimen/normal_margin"
                                android:paddingBottom="@dimen/normal_padding"
                                android:layout_marginBottom="@dimen/small_padding"
                                android:paddingTop="@dimen/normal_padding"
                                android:textAllCaps="true"
                                android:text="@string/text_close_guest_session"/>

                            <Button
                                android:id="@+id/btn_quest"
                                android:layout_width="@dimen/size_xxxx"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:minHeight="0dp"
                                android:textSize="@dimen/normal_font"
                                android:textColor="@color/white"
                                android:background="@drawable/button_round_purple"
                                android:paddingLeft="@dimen/normal_margin"
                                android:paddingRight="@dimen/normal_margin"
                                android:paddingBottom="@dimen/normal_padding"
                                android:layout_marginBottom="@dimen/small_padding"
                                android:paddingTop="@dimen/normal_padding"
                                android:textAllCaps="true"
                                android:text="@string/text_challenge_question"/>

                            <Button
                                android:id="@+id/btn_share"
                                android:layout_width="@dimen/size_xxxx"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:minHeight="0dp"
                                android:paddingLeft="@dimen/normal_margin"
                                android:paddingRight="@dimen/normal_margin"
                                android:paddingBottom="@dimen/normal_padding"
                                android:paddingTop="@dimen/normal_padding"
                                android:textSize="@dimen/normal_font"
                                android:textColor="@color/white"
                                android:background="@drawable/button_round_gold"
                                android:textAllCaps="true"
                                android:text="@string/text_share_partner"/>

                            <Button
                                android:id="@+id/btn_share_disabled"
                                android:layout_width="@dimen/size_xxxx"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:minHeight="0dp"
                                android:paddingLeft="@dimen/normal_margin"
                                android:paddingRight="@dimen/normal_margin"
                                android:paddingBottom="@dimen/normal_padding"
                                android:paddingTop="@dimen/normal_padding"
                                android:textSize="@dimen/normal_font"
                                android:textColor="@color/white"
                                android:background="@drawable/button_round_gold"
                                android:textAllCaps="true"
                                android:text="@string/text_share_partner"/>

                        </LinearLayout>

                    </ScrollView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>
