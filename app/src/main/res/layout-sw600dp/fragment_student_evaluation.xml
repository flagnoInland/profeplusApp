<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_fondo"
    tools:context="com.equipu.profeplus.fragments.student_job.StudentEvaluationFragment">

    <LinearLayout
        android:layout_above="@+id/btn_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/header_template4"></include>

        <ScrollView
           style="@style/scrollview_border_land">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_text_x"
                    android:text="@string/text_type_solutions"/>

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_text_xx"
                    android:text="@string/text_title_exam"/>

                <TextView
                    android:id="@+id/txt_observation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_text_xx"
                    android:text="@string/text_observation_evaluation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_question"
                        android:layout_height="wrap_content"
                        android:layout_width="@dimen/size_yy"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/big_font"
                        android:text="@string/text_question" />

                    <Space
                        android:layout_width="@dimen/normal_padding"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/txt_answer"
                        android:layout_height="wrap_content"
                        android:layout_width="@dimen/size_yy"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/big_font"
                        android:text="@string/text_answer" />

                    <Space
                        android:layout_width="@dimen/normal_padding"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/txt_score"
                        android:layout_height="wrap_content"
                        android:layout_width="@dimen/size_yy"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/big_font"
                        android:text="@string/text_score" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_margin" />


                <LinearLayout
                    android:id="@+id/question_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>

                <Button
                    android:id="@+id/btn_finish"
                    style="@style/default_app_boton_land"
                    android:textAllCaps="true"
                    android:text="@string/text_terminate"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_margin" />

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</FrameLayout>
