<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/large_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_pos1"
        style="@style/text_app_eval" />

    <Space
        android:layout_width="@dimen/normal_padding"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spn_pos1"
        style="@style/spinner_app_eval"
        android:contentDescription="pos1"/>

    <Space
        android:layout_width="@dimen/normal_padding"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/edt_pos1"
        style="@style/edit_app_eval" />

</LinearLayout>